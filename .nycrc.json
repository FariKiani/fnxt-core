{
  "extension": [".ts"],
  "all": true,
  "check-coverage": true,
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/internal/**/*.ts"
  ],
  "reporter": [
    "html",
    "json-summary",
    "lcov",
    "text",
    "text-summary"
  ],
  "report-dir": "coverage"
}
