{
  "compilerOptions": {
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "noEmit": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "fnxt": ["./src/index"],
      "fnxt/option": ["./src/option/index"],
      "fnxt/pipe": ["./src/pipe/index"],
      "fnxt/array": ["./src/array/index"],
      "fnxt/seq": ["./src/seq/index"],
      "fnxt/result": ["./src/result/index"],
      "fnxt/fnxt-types": ["./src/fnxt-types/index"]
    }
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}
