{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es6",
      "ES2015",
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "src/internal"
  ]
}
