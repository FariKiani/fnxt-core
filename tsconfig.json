{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "src/internal"
  ],
  "paths": {
    "@fnxt/core": [
      "./src/index"
    ]
  }
}
